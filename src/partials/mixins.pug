mixin picture(path, alt='', style='cover')
  picture.w-100(id!=attributes.id)&attributes(attributes)
    source.w-100(srcset=`${path}.webp` type="image/webp")
    source.w-100(srcset=`${path}.jpg` type="image/jpeg")
    img.w-100(srcset=`${path}.jpg`)

mixin picture-png(path, alt='', style='cover')
  picture.w-100(id!=attributes.id)&attributes(attributes)
    source.w-100(srcset=`${path}.webp` type="image/webp")
    source.w-100(srcset=`${path}.png` type="image/png")
    img.w-100(srcset=`${path}.png`)

mixin picture-card(path, alt='', style='cover')
  picture(id!=attributes.id)&attributes(attributes)
    source.image-cover(srcset=`${path}.webp` type="image/webp")
    source.image-cover(srcset=`${path}.jpg` type="image/jpeg")
    img.image-cover(srcset=`${path}.jpg`)

mixin gradient-btn()
  .main-button_wrap(class!=attributes.class)
    .main-button
      span.main-button__text Заказать 
        span.no-wrap тест-драйв

mixin gradient-btn-round(src, alt)
  .round-button
    img.round-button__img(src= src, alt= alt)

mixin gradient-btn-round-tel(src, alt)
  .round-button.round-button__tel
    img.round-button__img(src= src, alt= alt)

mixin control-btn(idPrev, idNext)
  .slide__wrap_pagination(class!=attributes.class)
    .slide__pagination.slide__pagination_prev(id= idPrev)
    .slide__pagination.slide__pagination_next(id= idNext)

mixin card(item)
  .card(class= item.class)
    .card__image-wrap
      +picture-card(item.src, item.title)(class!=attributes.class)
    .card__content.pr-col
      h3.card__title= item.title
      p.card__text= item.text1
      p.card__text= item.text2
        a.card__link(href="/") Terms and Conditions
